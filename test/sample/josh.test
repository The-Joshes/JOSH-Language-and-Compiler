#!/bin/bash
SUBDIRS=
CASES='simple1 simple2 simple3'

CUR_PATH=$1
if [ "$CUR_PATH" = "" ]; then
  CUR_PATH=.
fi

for CASE in $CASES; do
  ./$CASE $CUR_PATH/$CASE			
  if [ $? != 0 ]; then
    echo $CUR_PATH/$CASE "failed"
  fi
done

for DIR in $SUBDIRS; do
  cd $DIR
  ./josh.test $CUR_PATH/$DIR
  cd ..
done
